@using Ecommerce.Models;

@model List<Produto>

<!DOCTYPE html>
<html lang="pt-br">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Produtos</title>
    </head>
    <body>
        <table>
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Nome</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var produto in Model) {
                    <tr>
                        <td>@produto.ProdutoId</td>
                        <td>@produto.Nome</td>
                    </tr>
                }
            </tbody>
        </table>
         
    </body>
</html>